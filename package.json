{
  "name": "olivia",
  "version": "0.1.0",
  "description": "Windows Olivia assistant for Ollama",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "start:bg": "electron . --background",
    "dev": "electron .",
    "lint": "echo no lint",
    "build": "electron-builder",
    "dist:raw": "electron-builder --win nsis",
    "dist": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/build-win-installer.ps1",
    "rebuild-native": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@slack/socket-mode": "^1.3.5",
    "@slack/web-api": "^7.8.0",
    "better-sqlite3": "^12.6.2",
    "discord.js": "^14.17.3"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.projecto.olivia",
    "productName": "Olivia",
    "asar": true,
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/main/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true
    }
  }
}
